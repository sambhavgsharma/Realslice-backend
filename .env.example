# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Port
PORT=3000

# MongoDB Atlas Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/?appName=AppName
MONGO_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/?appName=Cluster0

# JWT Secret Key for Token Signing
# Use a strong, random string for production
JWT_SECRET=your_secure_jwt_secret_key_here_min_32_characters

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3001
